<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dreamland"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".TimerActivity">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top|center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/gridLayoutTimerLandscape">

            <TextView
                android:id="@+id/hangTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:padding="1dp"
                android:text="Hang"
                android:textColor="@color/colorSecondaryVariant"
                android:textSize="@dimen/main_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:id="@+id/hangText"
                android:textColor="@color/colorSecondaryText"
                android:textAlignment="center"
                android:textSize="@dimen/land_timer_size"
                android:textStyle="bold"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="1dp"
                android:layout_gravity="center_horizontal"  />

            <TextView
                android:id="@+id/pauseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="1dp"
                android:text="Pause"
                android:textColor="@color/colorSecondaryVariant"
                android:textSize="@dimen/main_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:id="@+id/pauseText"
                android:textColor="@color/colorSecondaryText"
                android:textAlignment="center"
                android:textSize="@dimen/land_timer_size"
                android:textStyle="bold"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="1dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/roundTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="1dp"
                android:text="ROUND"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="@dimen/main_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/roundsText"
                android:textColor="@color/colorSecondaryText"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="1dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rest"
                android:id="@+id/restTextView"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/main_text_size"
                android:textStyle="bold"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="1dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:id="@+id/restText"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/land_timer_size"
                android:textStyle="bold"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="1dp"
                android:layout_gravity="center_horizontal"  />

            <TextView
                android:id="@+id/setTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="1dp"
                android:text="SET"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="@dimen/main_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/setsText"
                android:textColor="@color/colorSecondaryText"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="1dp"
                android:layout_gravity="center_horizontal" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/soundButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_volume_up_white_36dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/countSoundButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/colorSecondaryVariant"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/baseline_timer_off_white_36dp" />

            <!--<ImageButton-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:background="@null"-->
                <!--android:id="@+id/soundButton"-->
                <!--android:src="@drawable/ic_volume_up_white_36dp"-->
                <!--android:layout_row="2"-->
                <!--android:layout_column="3"-->
                <!--android:layout_rowSpan="2"-->
                <!--android:layout_gravity="center_horizontal" />-->



            </GridLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="START"
                android:textColor="@color/colorSecondaryText"
                android:id="@+id/startButton"
                android:background="@drawable/buttonprimary"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

    </RelativeLayout>
</LinearLayout>