<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.mikeschen.www.hangboardrepeaters.TimerActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timerLayout1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hang"
                android:id="@+id/hangTextView"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:id="@+id/hangText"
                android:textColor="@color/colorSecondaryText"
                android:textAlignment="center"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_below="@+id/hangTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pause"
                android:id="@+id/pauseTextView"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="3dp"
                android:layout_below="@+id/hangText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:id="@+id/pauseText"
                android:textColor="@color/colorSecondaryText"
                android:textAlignment="center"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_below="@id/pauseTextView"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rest"
                android:id="@+id/restTextView"
                android:textColor="@color/colorAccent"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="3dp"
                android:layout_below="@+id/pauseText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:id="@+id/restText"
                android:textColor="@color/colorSecondaryText"
                android:layout_below="@+id/restTextView"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAlignment="center"
                android:padding="3dp" />
</LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timerLayout1"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SET"
                android:id="@+id/setTextView"
                android:textColor="@color/colorBlue"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:padding="3dp"
                android:layout_below="@+id/restText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/setsText"
                android:textColor="@color/colorSecondaryText"
                android:layout_below="@+id/setTextView"
                android:gravity="center_horizontal"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAlignment="center"
                android:padding="3dp" />
        </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="START"
                android:textColor="@color/colorSecondaryText"
                android:id="@+id/startButton"
                android:background="@color/colorPrimaryLight"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


    </RelativeLayout>

</LinearLayout>