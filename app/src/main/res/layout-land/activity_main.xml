<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:showDividers="middle"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/huecoland"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top|center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/gridLayoutMainLandscape">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/hangtime"
                android:textColor="@color/colorPrimary"
                android:id="@+id/hangTimeTextView"
                android:textSize="@dimen/main_text_size"
                android:textStyle="bold"
                android:layout_row="0"
                android:layout_column="0"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"  />

            <EditText
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/hangEditText"
                android:textSize="21sp"
                android:textStyle="bold"
                android:hint="Sec."
                android:background="@color/colorSecondaryText"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/pausetime"
                android:textColor="@color/colorPrimaryLight"
                android:id="@+id/pauseTimeTextView"
                android:textSize="@dimen/main_text_size"
                android:textStyle="bold"
                android:layout_row="0"
                android:layout_column="1"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/pauseEditText"
                android:textSize="21sp"
                android:textStyle="bold"
                android:hint="Sec."
                android:background="@color/colorSecondaryText"
                android:layout_row="1"
                android:layout_column="1"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/numberrounds"
                android:textColor="@color/colorYellow"
                android:id="@+id/roundNumberTextView"
                android:textSize="@dimen/main_text_size"
                android:textStyle="bold"
                android:layout_row="0"
                android:layout_column="3"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/roundsEditText"
                android:textSize="21sp"
                android:textStyle="bold"
                android:hint="Rounds"
                android:background="@color/colorSecondaryText"
                android:layout_row="1"
                android:layout_column="3"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/resttime"
                android:textColor="@color/colorAccent"
                android:id="@+id/restTimeTextView"
                android:textSize="@dimen/main_text_size"
                android:textStyle="bold"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/restEditText"
                android:textSize="21sp"
                android:textStyle="bold"
                android:hint="Sec."
                android:background="@color/colorSecondaryText"
                android:layout_row="3"
                android:layout_column="0"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/numbersets"
                android:textColor="@color/colorBlue"
                android:id="@+id/setsTimeTextView"
                android:textSize="@dimen/main_text_size"
                android:textStyle="bold"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/setsEditText"
                android:textSize="21sp"
                android:textStyle="bold"
                android:hint="Sets"
                android:background="@color/colorSecondaryText"
                android:layout_row="3"
                android:layout_column="1"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"/>
        </GridLayout>

        <LinearLayout
            android:id="@+id/page_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >

            <Button
                android:id="@+id/presetButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/buttonwhite"
                android:elevation="2dp"
                android:text="@string/defaultbutton"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/powerButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/buttonwhite"
                android:elevation="2dp"
                android:text="@string/powerbutton"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/custButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:elevation="2dp"
                android:background="@drawable/buttonwhite"
                android:text="@string/custbutton"
                android:textColor="@color/colorBlue"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:elevation="2dp"
                android:background="@drawable/buttonwhite"
                android:text="@string/savebutton"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/startButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/buttonred"
                android:elevation="2dp"
                android:text="@string/readybutton"
                android:textColor="@color/colorSecondaryText"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>