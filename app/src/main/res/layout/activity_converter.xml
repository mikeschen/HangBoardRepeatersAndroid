<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_converter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stained"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mikeschen.www.hangboardrepeaters.ConverterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/gradeConverterTextView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:alpha="0.65"
            android:background="#ffffff"
            android:elevation="2dp"
            android:padding="@dimen/activity_vertical_margin"
            android:text="@string/gradeconverter"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/gradeConverterTextView"
        android:elevation="2dp"
        android:text="Hueco"
        android:textColor="@color/colorSecondaryText"
        android:id="@+id/huecoButton"
        android:background="@drawable/buttonorange"
        android:textStyle="bold"
        android:textSize="@dimen/timer_textview"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/huecoButton"
        android:elevation="2dp"
        android:text="Font"
        android:textColor="@color/colorSecondaryText"
        android:id="@+id/fontButton"
        android:background="@drawable/buttongreen"
        android:textStyle="bold"
        android:textSize="@dimen/timer_textview"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/fontButton"
        android:elevation="2dp"
        android:text="YDS"
        android:textColor="@color/colorSecondaryText"
        android:id="@+id/ydsButton"
        android:background="@drawable/buttonblue"
        android:textStyle="bold"
        android:textSize="@dimen/timer_textview"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/ydsButton"
        android:elevation="2dp"
        android:text="French"
        android:textColor="@color/colorSecondaryText"
        android:id="@+id/frenchButton"
        android:background="@drawable/buttonorange"
        android:textStyle="bold"
        android:textSize="@dimen/timer_textview"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/frenchButton"
        android:elevation="2dp"
        android:text="UIAA"
        android:textColor="@color/colorSecondaryText"
        android:id="@+id/uiaaButton"
        android:background="@drawable/buttonyellow"
        android:textStyle="bold"
        android:textSize="@dimen/timer_textview"
        android:layout_margin="5dp" />

    </LinearLayout>
</ScrollView>
