<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_converter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stained"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mikeschen.www.hangboardrepeaters.ConverterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Grade Converter"
        android:id="@+id/gradeConverterTextView"
        android:textColor="@color/colorPrimaryLight"
        android:background="#ffffff"
        android:alpha="0.65"
        android:padding="@dimen/activity_vertical_margin"
        android:elevation="2dp"
        android:textSize="@dimen/main_text_size"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/huecoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Hueco"
        android:layout_below="@id/gradeConverterTextView"
        />

    <NumberPicker
        android:id="@+id/huecoNumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/huecoTextView"
        />

    <TextView
        android:id="@+id/fontTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Font"
        android:layout_below="@id/huecoTextView"
        />

    <TextView
        android:id="@+id/ydsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="YDS"
        android:layout_below="@id/fontTextView"
        />

    <TextView
        android:id="@+id/frenchTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="French"
        android:layout_below="@id/ydsTextView"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp"
        android:text="Font"
        android:textColor="@color/colorSecondaryText"
        android:id="@+id/fontButton"
        android:background="@drawable/buttonred"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp"
        android:text="YDS"
        android:textColor="@color/colorSecondaryText"
        android:id="@+id/ydsButton"
        android:background="@drawable/buttonred"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp"
        android:text="French"
        android:textColor="@color/colorSecondaryText"
        android:id="@+id/frenchButton"
        android:background="@drawable/buttonred"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp"
        android:text="Hueco"
        android:textColor="@color/colorSecondaryText"
        android:id="@+id/huecoButton"
        android:background="@drawable/buttonred"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
